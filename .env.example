# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_role_key_here

# Next.js Public Variables (exposed to client)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Mini App URL (for Telegram Web App)
MINI_APP_URL=http://localhost:3000

# Socket.IO Server Configuration
SOCKET_PORT=3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# For Production: Deploy socket server separately and set:
# NEXT_PUBLIC_SOCKET_URL=https://your-socket-server.railway.app

# Admin Configuration
ADMIN_PASSWORD=your_admin_password_here

# Environment
NODE_ENV=development

# IMPORTANT FOR VERCEL DEPLOYMENT:
# Add all these variables to your Vercel project settings:
# https://vercel.com/dashboard → Your Project → Settings → Environment Variables
# 
# Required for Vercel:
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_URL
# - SUPABASE_KEY
# - BOT_TOKEN
# - ADMIN_PASSWORD
# - NODE_ENV=production (for production environment only)

# Permanent Domains (No need to change after deployment)
# Bot: https://yegna-bingo-bot.vercel.app
# Dashboard: https://yegnabingo.vercel.app
# Mini App: https://miniapo.vercel.app
